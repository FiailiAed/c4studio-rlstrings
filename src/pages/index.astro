---
import MinimalLayout from '../layouts/MinimalLayout.astro';
---

<MinimalLayout title="RL Strings - Coming Soon" defaultTheme="dark">
  <main class="min-h-screen bg-gray-100 dark:bg-gradient-to-br dark:from-gray-950 dark:via-black dark:to-gray-950 flex items-center justify-center px-4 py-12 relative overflow-hidden">

    <!-- Particle dots background -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      {[
        { top: '10%', left: '15%', delay: '0s', size: '3px' },
        { top: '20%', left: '80%', delay: '1s', size: '2px' },
        { top: '60%', left: '10%', delay: '2s', size: '2px' },
        { top: '75%', left: '70%', delay: '0.5s', size: '3px' },
        { top: '40%', left: '90%', delay: '1.5s', size: '2px' },
        { top: '85%', left: '40%', delay: '3s', size: '2px' },
        { top: '30%', left: '50%', delay: '2.5s', size: '3px' },
        { top: '50%', left: '25%', delay: '4s', size: '2px' },
        { top: '15%', left: '60%', delay: '1.2s', size: '2px' },
        { top: '90%', left: '85%', delay: '3.5s', size: '3px' },
      ].map((dot) => (
        <div
          class="absolute rounded-full bg-red-600/20 dark:bg-red-600/40 animate-float"
          style={`top:${dot.top};left:${dot.left};width:${dot.size};height:${dot.size};animation-delay:${dot.delay};`}
        />
      ))}
    </div>

    <!-- Glassmorphic card -->
    <div class="relative z-10 glass rounded-3xl p-8 md:p-14 max-w-lg w-full text-center">
      <img src="/RL-Strings-Horiz.svg" alt="RL Strings" class="h-16 md:h-20 mx-auto mt-4 mb-4 dark:hidden" />
      <img src="/RL-Strings-Horiz-White.svg" alt="RL Strings" class="h-16 md:h-20 mx-auto mt-4 mb-4 hidden dark:block" />

      <p class="text-red-600 dark:text-red-500 font-semibold uppercase tracking-widest text-sm mb-4 mt-8">Coming Soon</p>

      <p class="text-gray-600 dark:text-gray-400 mb-8 font-light leading-relaxed">
        We're stringing up an extraordinary experience for you!
      </p>

    </div>
  </main>
</MinimalLayout>
