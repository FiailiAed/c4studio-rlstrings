---
import MainLayout from '../layouts/MainLayout.astro';
import { UserProfile as ClerkUserProfile } from '@clerk/astro/components';

// Redirect to sign-in if not authenticated
const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/');
}
---

<MainLayout title="User Profile - RL Strings">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Your Profile</h1>

    <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8">
      <ClerkUserProfile
        routing="path"
        path="/user-profile"
        appearance={{
          elements: {
            rootBox: "w-full",
            card: "bg-transparent shadow-none",
          },
          variables: {
            colorPrimary: "#9333ea",
            colorBackground: "transparent",
            colorText: "#ffffff",
            colorTextSecondary: "#d1d5db",
          }
        }}
      />
    </div>
  </div>
</MainLayout>
