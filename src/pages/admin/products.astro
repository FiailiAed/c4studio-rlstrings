---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { getProducts } from '../../lib/stripe';
import type { ProductWithPrice } from '../../lib/stripe';

const products = await getProducts();

function formatPrice(price: import('stripe').default.Price | null): string {
  if (!price || !price.unit_amount) return 'â€”';
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: price.currency.toUpperCase(),
  }).format(price.unit_amount / 100);
}
---

<DashboardLayout
  title="RL Strings | Admin Dashboard - Products"
  activePage="Products"
  description="Products Dashboard"
>
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-white">Products</h2>

    <div class="mt-6 grid grid-cols-2 gap-x-4 gap-y-6 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:grid-cols-4 xl:gap-x-8">
      {products.map(product => (
        <div class="group relative">
          <img
            src={product.images[0] ?? ''}
            alt={product.name}
            class="h-36 w-full rounded-md bg-slate-800 object-cover object-center group-hover:opacity-75 sm:h-44 lg:h-80"
          />
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-slate-200">
                <a href={product.url ?? '#'}>
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  {product.name}
                </a>
              </h3>
              {product.description && (
                <p class="mt-1 text-sm text-slate-400">{product.description}</p>
              )}
            </div>
            <p class="text-sm font-medium text-white">{formatPrice(product.default_price)}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</DashboardLayout>
