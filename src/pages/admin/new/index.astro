---
import AdminLayout from '../../../layouts/AdminLayout.astro';
---

<AdminLayout
  title="Dashboard | RL Strings Admin"
  description="RL Strings admin dashboard overview."
  activePage="Dashboard"
  pageTitle="Dashboard"
>
  <!-- Stats Overview -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Orders Card -->
    <div class="rounded-lg bg-gray-800 p-6 ring-1 ring-white/10">
      <div class="flex items-center gap-4">
        <div class="flex h-10 w-10 items-center justify-center rounded-md bg-white/10">
          <svg class="h-5 w-5 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007Z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-400">Total Orders</p>
          <p class="text-2xl font-bold text-white">—</p>
        </div>
      </div>
      <div class="mt-4">
        <a href="/admin/new/orders" class="text-sm font-medium text-gray-400 hover:text-white transition-colors">
          View all orders &rarr;
        </a>
      </div>
    </div>

    <!-- Inventory Card -->
    <div class="rounded-lg bg-gray-800 p-6 ring-1 ring-white/10">
      <div class="flex items-center gap-4">
        <div class="flex h-10 w-10 items-center justify-center rounded-md bg-white/10">
          <svg class="h-5 w-5 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-400">Inventory Items</p>
          <p class="text-2xl font-bold text-white">—</p>
        </div>
      </div>
      <div class="mt-4">
        <a href="/admin/new/products" class="text-sm font-medium text-gray-400 hover:text-white transition-colors">
          Manage inventory &rarr;
        </a>
      </div>
    </div>

    <!-- Revenue Card -->
    <div class="rounded-lg bg-gray-800 p-6 ring-1 ring-white/10">
      <div class="flex items-center gap-4">
        <div class="flex h-10 w-10 items-center justify-center rounded-md bg-white/10">
          <svg class="h-5 w-5 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-400">Revenue</p>
          <p class="text-2xl font-bold text-white">—</p>
        </div>
      </div>
      <div class="mt-4">
        <span class="text-sm font-medium text-gray-600">Coming soon</span>
      </div>
    </div>
  </div>

  <!-- Recent Activity Placeholder -->
  <div class="mt-8 rounded-lg bg-gray-800 p-6 ring-1 ring-white/10">
    <h2 class="text-base font-semibold text-white mb-4">Recent Orders</h2>
    <div class="flex items-center justify-center py-12 text-gray-600">
      <p class="text-sm">No recent orders to display.</p>
    </div>
  </div>
</AdminLayout>
