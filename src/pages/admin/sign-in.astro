---
import ShopLayout from '../../layouts/ShopLayout.astro';
import { SignIn } from '@clerk/astro/components';
---

<ShopLayout
  title="Admin Sign In | RL Strings"
  description="Sign in to the RL Strings admin dashboard."
>
  <section class="min-h-[calc(100vh-14rem)] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Admin Sign In</h1>
        <p class="text-gray-500 mt-1 text-sm">Access the RL Strings admin dashboard</p>
      </div>

      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <SignIn
          appearance={{
            elements: {
              rootBox: "w-full",
              card: "bg-transparent shadow-none w-full p-0",
              headerTitle: "text-gray-900",
              headerSubtitle: "text-gray-500",
              formButtonPrimary:
                "bg-gray-900 hover:bg-gray-800 text-white font-semibold rounded-lg transition-all",
              formFieldInput:
                "border-gray-300 text-gray-900 rounded-lg focus:border-gray-900 focus:ring-gray-900/10 transition-colors",
              formFieldLabel: "text-gray-700 font-medium",
              footerActionLink: "text-gray-900 hover:text-gray-700 font-semibold",
              dividerLine: "bg-gray-200",
              dividerText: "text-gray-400",
              socialButtonsBlockButton:
                "border-gray-200 hover:border-gray-300 text-gray-700 rounded-lg transition-all",
              alertText: "text-red-600",
              logoBox: "hidden",
            },
            layout: {
              socialButtonsPlacement: "bottom",
              socialButtonsVariant: "blockButton",
            },
          }}
        />
      </div>
    </div>
  </section>
</ShopLayout>
