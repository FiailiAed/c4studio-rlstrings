---
import MainLayout from '../layouts/MainLayout.astro';
import { SignIn } from '@clerk/astro/components';
---

<MainLayout
  title="Sign In | RL Strings"
  description="Sign in to your RL Strings account to manage orders and track your custom lacrosse stringing."
>
  <!-- Sign In Section -->
  <section class="min-h-[calc(100vh-14rem)] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-black uppercase tracking-tight mb-3">
          Welcome Back
        </h1>
        <p class="text-neutral-400">
          Sign in to access your elite stringing orders
        </p>
      </div>

      <!-- Sign In Card -->
      <div class="glass-dark rounded-3xl p-8 shadow-2xl shadow-red-900/10">
        <SignIn
          appearance={{
            elements: {
              // Root card
              rootBox: "w-full",
              card: "bg-transparent shadow-none w-full",

              // Header
              headerTitle: "hidden",
              headerSubtitle: "hidden",

              // Form elements
              formButtonPrimary:
                "bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all shadow-lg shadow-red-900/20 hover:shadow-red-900/30",
              formFieldInput:
                "bg-neutral-900 border-neutral-800 text-white rounded-lg focus:border-red-600 focus:ring-red-600/20 transition-colors",
              formFieldLabel: "text-neutral-300 font-semibold",

              // Links
              footerActionLink: "text-red-500 hover:text-red-400 font-semibold",
              identityPreviewEditButton: "text-red-500 hover:text-red-400",

              // Divider
              dividerLine: "bg-neutral-800",
              dividerText: "text-neutral-500",

              // Social buttons
              socialButtonsBlockButton:
                "bg-neutral-900 border-neutral-800 hover:border-red-600/50 text-white rounded-lg transition-all",
              socialButtonsBlockButtonText: "text-white font-semibold",

              // Footer
              footer: "hidden",

              // Other elements
              otpCodeFieldInput:
                "bg-neutral-900 border-neutral-800 text-white rounded-lg focus:border-red-600",
              formResendCodeLink: "text-red-500 hover:text-red-400",
              alertText: "text-red-400",

              // Clerk branding
              logoBox: "hidden",

              // Internal card
              main: "gap-6",
            },
            layout: {
              socialButtonsPlacement: "bottom",
              socialButtonsVariant: "blockButton",
            }
          }}
        />
      </div>

      <!-- Help Text -->
      <p class="text-center text-neutral-500 text-sm mt-6">
        Need help? Contact us at{' '}
        <a
          href="mailto:support@rlstrings.com"
          class="text-red-500 hover:text-red-400 font-semibold transition-colors"
        >
          support@rlstrings.com
        </a>
      </p>
    </div>
  </section>
</MainLayout>
