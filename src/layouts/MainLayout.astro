---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import Header from '../components/Header.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'RL Strings - Professional Lacrosse Stringing',
  description = 'Expert lacrosse stick stringing services'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&family=JetBrains+Mono&display=swap" rel="stylesheet" />
  </head>

  <body class="bg-black text-white min-h-screen overflow-x-hidden">
    <!-- Fixed Radial Glow Background -->
    <div class="fixed inset-0 pointer-events-none -z-10" aria-hidden="true">
      <div class="radial-glow-top-left"></div>
      <div class="radial-glow-bottom-right"></div>
    </div>

    <Header />

    <main class="pt-28 pb-12 px-4">
      <slot />
    </main>

    <footer class="border-t border-neutral-900 bg-black py-12 px-4">
      <div class="container mx-auto max-w-7xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- Brand Column -->
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-red-600 rounded flex items-center justify-center">
                <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="12" y1="2" x2="12" y2="22" />
                  <line x1="2" y1="12" x2="22" y2="12" />
                </svg>
              </div>
              <div>
                <h3 class="font-black italic uppercase text-lg">RL Strings</h3>
                <p class="text-xs text-red-500">Elite Performance</p>
              </div>
            </div>
            <p class="text-neutral-400 text-sm">
              Professional lacrosse stringing services delivering precision, consistency, and championship-level performance.
            </p>
          </div>

          <!-- Guarantee Column -->
          <div class="space-y-3">
            <h4 class="font-bold text-white">Our Guarantee</h4>
            <blockquote class="text-neutral-400 text-sm italic border-l-2 border-red-600 pl-4">
              "If your stick isn't performing exactly how you want it, we'll restring it for free. No questions asked."
              <footer class="text-xs text-neutral-500 mt-2">â€” Todd Ruff, Founder</footer>
            </blockquote>
          </div>

          <!-- Location Column -->
          <div class="space-y-3">
            <h4 class="font-bold text-white">Find Us</h4>
            <div class="text-neutral-400 text-sm space-y-1">
              <p class="font-semibold text-white">Stellar Athletics</p>
              <p>1250 Almonesson Rd</p>
              <p>Gloucester Township, NJ 08012</p>
            </div>
          </div>
        </div>

        <!-- Copyright Row -->
        <div class="border-t border-neutral-900 pt-6 text-center">
          <p class="text-neutral-500 text-sm">
            &copy; {new Date().getFullYear()} RL Strings. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
    <Analytics />
  </body>
</html>
