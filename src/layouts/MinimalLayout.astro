---
import Analytics from '@vercel/analytics/astro'
import '../styles/minimalLayout.css';

interface Props {
  title: string;
  description?: string;
  defaultTheme?: 'dark' | 'light';
}

const { title, description = 'RL Strings - Coming Soon', defaultTheme = 'dark' } = Astro.props;
---

<html lang="en" class={defaultTheme}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <style>
      body { font-family: 'Inter', sans-serif; }
      .font-mono { font-family: 'JetBrains Mono', monospace; }
    </style>
  </head>
  <body class="min-h-screen antialiased transition-colors duration-300">
    <slot />

    <!-- Theme toggle button -->
    <button
      id="theme-toggle"
      class="fixed bottom-6 right-6 z-50 w-12 h-12 rounded-full flex items-center justify-center transition-all duration-300 cursor-pointer shadow-lg hover:scale-110"
      aria-label="Toggle theme"
    >
      <!-- Sun icon (shown in dark mode) -->
      <svg id="icon-sun" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <!-- Moon icon (shown in light mode) -->
      <svg id="icon-moon" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
      </svg>
    </button>

    <script is:inline>
      (function() {
        const html = document.documentElement;
        const toggle = document.getElementById('theme-toggle');
        const iconSun = document.getElementById('icon-sun');
        const iconMoon = document.getElementById('icon-moon');

        function updateIcons() {
          const isDark = html.classList.contains('dark');
          iconSun.classList.toggle('hidden', !isDark);
          iconMoon.classList.toggle('hidden', isDark);
          if (isDark) {
            toggle.classList.add('bg-white/10', 'text-white', 'hover:bg-white/20');
            toggle.classList.remove('bg-black/10', 'text-gray-800', 'hover:bg-black/20');
          } else {
            toggle.classList.add('bg-black/10', 'text-gray-800', 'hover:bg-black/20');
            toggle.classList.remove('bg-white/10', 'text-white', 'hover:bg-white/20');
          }
        }

        updateIcons();

        toggle.addEventListener('click', function() {
          html.classList.toggle('dark');
          html.classList.toggle('light');
          updateIcons();
        });
      })();
    </script>
  </body>
</html>
