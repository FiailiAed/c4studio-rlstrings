---
import '../styles/shop.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'RL Strings | Shop',
  description = 'Stop settling for factory trash. Custom built, professionally strung.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
      }
    </style>
  </head>

  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <!-- Nav -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 h-14 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2">
          <div class="w-8 h-8 bg-black rounded flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10" />
              <line x1="12" y1="2" x2="12" y2="22" />
              <line x1="2" y1="12" x2="22" y2="12" />
            </svg>
          </div>
          <span class="font-black italic uppercase text-sm hidden sm:inline">RL Strings</span>
        </a>

        <!-- Back to Home -->
        <a href="/new" class="text-sm text-gray-600 hover:text-black transition flex items-center gap-1">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12" />
            <polyline points="12 19 5 12 12 5" />
          </svg>
          Back to Home
        </a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 bg-white py-12 px-4 mt-16">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- Brand -->
          <div class="space-y-3">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-black rounded flex items-center justify-center">
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="12" y1="2" x2="12" y2="22" />
                  <line x1="2" y1="12" x2="22" y2="12" />
                </svg>
              </div>
              <div>
                <h3 class="font-black italic uppercase text-sm">RL Strings</h3>
              </div>
            </div>
            <p class="text-gray-600 text-sm">
              Professional lacrosse stringing services. Custom built, professionally strung.
            </p>
          </div>

          <!-- Guarantee -->
          <div class="space-y-3">
            <h4 class="font-bold text-gray-900">Our Guarantee</h4>
            <blockquote class="text-gray-600 text-sm italic border-l-2 border-black pl-4">
              "If your stick isn't performing exactly how you want it, we'll restring it for free. No questions asked."
            </blockquote>
          </div>

          <!-- Location -->
          <div class="space-y-3">
            <h4 class="font-bold text-gray-900">Find Us</h4>
            <div class="text-gray-600 text-sm space-y-1">
              <p class="font-semibold text-gray-900">Stellar Athletics</p>
              <p>876 North Lenola Road</p>
              <p>Moorestown, New Jersey 08057, United States</p>
            </div>
          </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-gray-200 pt-6 text-center">
          <p class="text-gray-500 text-sm">
            &copy; {new Date().getFullYear()} RL Strings. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <Analytics />
  </body>
</html>
