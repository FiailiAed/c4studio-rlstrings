---
const links = [
  { href: "#typography", label: "Type" },
  { href: "#buttons", label: "Buttons" },
  { href: "#inputs", label: "Inputs" },
  { href: "#cards", label: "Cards" },
];
---
<nav class="fixed top-0 w-full z-50 p-4 lg:px-12 pointer-events-none">
  <div class="max-w-7xl mx-auto flex justify-between items-center pointer-events-auto">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-brand-accent rounded-full flex items-center justify-center font-bold text-black italic">T</div>
      <span class="font-bold tracking-tighter text-xl hidden sm:block">FOUNDRY.v1</span>
    </div>
    <div class="glass px-6 py-2 rounded-full flex gap-6 text-sm font-medium">
      {links.map(link => (
        <a href={link.href} class="hover:text-brand-accent transition-colors">{link.label}</a>
      ))}
    </div>
  </div>
</nav>
